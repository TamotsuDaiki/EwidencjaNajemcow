@{
    ViewData["Title"] = Localizer["PageTitle"];
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="container mt-5 text-center">
    <h1 class="mb-4">@Localizer["PageTitle"]</h1>

    <div class="row justify-content-center">
        <div class="col-md-3 m-2">
            <a asp-controller="Tenants" asp-action="Index" class="text-decoration-none">
                <div class="p-4 bg-light rounded shadow-sm">
                    <h4>@Localizer["TenantsButton"]</h4>
                </div>
            </a>
        </div>

        <div class="col-md-3 m-2">
            <a asp-controller="Apartments" asp-action="Index" class="text-decoration-none">
                <div class="p-4 bg-light rounded shadow-sm">
                    <h4>@Localizer["ApartmentsButton"]</h4>
                </div>
            </a>
        </div>

        <div class="col-md-3 m-2">
            <a asp-controller="Rentals" asp-action="Index" class="text-decoration-none">
                <div class="p-4 bg-light rounded shadow-sm">
                    <h4>@Localizer["ContractsButton"]</h4>
                </div>
            </a>
        </div>
    </div>
</div>
