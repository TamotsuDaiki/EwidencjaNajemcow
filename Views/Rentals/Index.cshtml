@model IEnumerable<Rental>
@{
    ViewData["Title"] = "Umowy najmu";
}

<div class="container mt-5">
    <h2 class="mb-4">Lista umów najmu</h2>
    <p>
        <a asp-action="Create" class="btn btn-primary">Dodaj nową umowę</a>
    </p>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(m => m.First().ContractNumber)</th>
                <th>@Html.DisplayNameFor(m => m.First().StartDate)</th>
                <th>@Html.DisplayNameFor(m => m.First().EndDate)</th>
                <th>Najemca</th>
                <th>Mieszkanie</th>
                <th>@Html.DisplayNameFor(m => m.First().IsActive)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ContractNumber</td>
                    <td>@item.StartDate.ToShortDateString()</td>
                    <td>@item.EndDate.ToShortDateString()</td>
                    <td>@item.Tenant?.FullName</td>
                    <td>@item.Apartment?.AddressSummary</td>
                    <td>@(item.IsActive ? "Tak" : "Nie")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Edytuj</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Szczegóły</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
