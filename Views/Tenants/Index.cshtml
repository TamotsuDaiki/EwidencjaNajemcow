@model IEnumerable<Tenant>
@{
    ViewData["Title"] = "Najemcy";
}

<div class="container mt-5">
    <h2 class="mb-4">Lista najemców</h2>
    <p>
        <a asp-action="Create" class="btn btn-primary">Dodaj najemcę</a>
    </p>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(m => m.First().FirstName)</th>
                <th>@Html.DisplayNameFor(m => m.First().LastName)</th>
                <th>@Html.DisplayNameFor(m => m.First().PESEL)</th>
                <th>@Html.DisplayNameFor(m => m.First().Email)</th>
                <th>@Html.DisplayNameFor(m => m.First().Phone)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.PESEL</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Edytuj</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Szczegóły</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Usuń</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
